{% extends 'base-layout.html.twig' %}
{% block body %}
  <!-- begin::Row -->

  <!-- begin::Navbar -->
  <div class="card mb-5 mb-xxl-8">
    <div class="card-body pt-9 pb-0">
      <!-- begin::Details -->
      <div class="d-flex flex-wrap flex-sm-nowrap">
        <!-- begin: Pic -->
        <div class="me-7 mb-4">
          <div class="symbol symbol-100px symbol-lg-160px symbol-fixed position-relative">
           {#  <img src="../../assets/media/avatars/300-1.jpg" alt="image" /> #}
              {% if menu.findParametre(app.user.employe.entreprise.denomination) | length > 0 %}
            <img alt="Logo" width="160" height="42" src="{{ asset('uploads/' ~ menu.findParametre(app.user.employe.entreprise.denomination).logo.path ~'/'~ menu.findParametre(app.user.employe.entreprise.denomination).logo.alt) }}" class="logo"/>
            {% else %}
                <img alt="Logo" src="{{ asset('assets/media/logos/logo_tt.png') }}" class="logo"  />
            {% endif %}
            <div class="position-absolute translate-middle bottom-0 start-100 mb-6 bg-success rounded-circle border border-4 border-body h-20px w-20px"></div>
          </div>
        </div>
        <!-- end::Pic -->

        <!-- begin::Info -->
        <div class="flex-grow-1">
          <!-- begin::Title -->
          <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
            <!-- begin::User -->
            <div class="d-flex flex-column">
              <!-- begin::Name -->
              <div class="d-flex align-items-center mb-2">
                <a href="#" class="text-gray-900 text-hover-primary fs-2 fw-bold me-1">{{ app.user.employe.getNomComplet }}</a>
                <a href="#"><i class="ki-outline ki-verify fs-1 text-primary"></i></a>
              </div>
              <!-- end::Name -->

              <!-- begin::Info -->
              <div class="d-flex flex-wrap fw-semibold fs-6 mb-4 pe-2">
                <a href="#" class="d-flex align-items-center text-gray-400 text-hover-primary me-5 mb-2"><i class="ki-outline ki-profile-circle fs-4 me-1"></i> {{ app.user.employe.entreprise.denomination }}</a>
                <a href="#" class="d-flex align-items-center text-gray-400 text-hover-primary me-5 mb-2"><i class="ki-outline ki-geolocation fs-4 me-1"></i></a>
                <a href="#" class="d-flex align-items-center text-gray-400 text-hover-primary mb-2"><i class="ki-outline ki-sms fs-4 me-1"></i>{{ app.user.employe.adresseMail }}</a>
              </div>
              <!-- end::Info -->
            </div>
            <!-- end::User -->

            <!-- begin::Actions -->
            <div class="d-flex my-4">
             
              
              <!-- begin::Menu -->
              <div class="me-0">
                {# <button class="btn btn-sm btn-icon btn-bg-light btn-active-color-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end"><i class="ki-solid ki-dots-horizontal fs-2x me-1"></i></button>
 #}
                <!-- begin::Menu 3 -->
                
                <!-- end::Menu 3 -->
              </div>
              <!-- end::Menu -->
            </div>
            <!-- end::Actions -->
          </div>
          <!-- end::Title -->

          <!-- begin::Stats -->
        
        
 <div class="d-flex flex-wrap flex-stack">
            <!-- begin::Wrapper -->
            <div class="d-flex flex-column flex-grow-1 pe-8">
              <!-- begin::Stats -->
              <div class="d-flex flex-wrap">
                <!-- begin::Stat -->
                <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                  <!-- begin::Number -->
                  <div class="d-flex align-items-center">
                    <i class="ki-outline ki-arrow-up fs-3 text-success me-2"></i> <div class="fs-2 fw-bold counted" data-kt-countup="true" data-kt-countup-value="4500" data-kt-countup-prefix="$" data-kt-initialized="1">
                    {# {{ menu.nombreDemandeStat('demande_valider_directeur',null) }} #} 0</div>
                  </div>
                  <!-- end::Number -->

                  <!-- begin::Label -->
                  <div class="fw-semibold fs-6 text-gray-400" style="color: red;font-size:18px">Nombre demandes en attente validation</div>
                  <!-- end::Label -->
                </div>
                <!-- end::Stat -->

                <!-- begin::Stat -->
                <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                  <!-- begin::Number -->
                  <div class="d-flex align-items-center">
                    <i class="ki-outline ki-arrow-down fs-3 text-danger me-2"></i> <div class="fs-2 fw-bold counted" data-kt-countup="true" data-kt-countup-value="80" data-kt-initialized="1">
                   {#  {{ menu.nombreDemandeStat(null,null)}} #} 0</div>
                  </div>
                  <!-- end::Number -->

                  <!-- begin::Label -->
                  <div class="fw-semibold fs-6 text-gray-400" style="color: red;font-size:18px">Nombre de demandes</div>
                  <!-- end::Label -->
                </div>
                <!-- end::Stat -->

                <!-- begin::Stat -->
                <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                  <!-- begin::Number -->
                  <div class="d-flex align-items-center">
                    <i class="ki-outline ki-arrow-up fs-3 text-success me-2"></i> <div class="fs-2 fw-bold counted" data-kt-countup="true" data-kt-countup-value="60" data-kt-countup-prefix="%" data-kt-initialized="1">
                    {#  {{ menu.nombreDemandeStat('demande_valider',null)}} #} 0</div>
                  </div>
                  <!-- end::Number -->

                  <!-- begin::Label -->
                  <div class="fw-semibold fs-6 text-gray-400" style="color: red;font-size:18px">Nombre de demandes acceptées</div>
                  <!-- end::Label -->
                </div>
                <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                  <!-- begin::Number -->
                  <div class="d-flex align-items-center">
                    <i class="ki-outline ki-arrow-up fs-3 text-success me-2"></i> <div class="fs-2 fw-bold counted" data-kt-countup="true" data-kt-countup-value="60" data-kt-countup-prefix="%" data-kt-initialized="1">
                    {#  {{ menu.nombreDemandeStat('demande_refuser',null)}} #} 0</div>
                  </div>
                  <!-- end::Number -->

                  <!-- begin::Label -->
                  <div class="fw-semibold fs-6 text-gray-400" style="color: red;font-size:18px">Nombre de demandes réfsuées</div>
                  <!-- end::Label -->
                </div>
                <!-- end::Stat -->
              </div>

              <!-- end::Stats ko nate-->
            </div>
            <!-- end::Wrapper -->

            <!-- begin::Progress -->
         
          </div>

         
          <!-- end::Stats -->
        </div>
        <!-- end::Info -->
      </div>
     
    </div>
  </div>
  <!-- end::Navbar -->
 
{% endblock %}
