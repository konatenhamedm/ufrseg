
{% set photo = photo %}
{% set data = data %}
{% set label = label %}

<div class="form-group ">
				<label class="sr-onl" for="userinput1">
					{{ label }}*
				</label>
				
			</div>
<div class="image-input image-input-outline" data-kt-image-input="true" style="background-image: url(/assets/media/svg/avatars/blank.svg)">
<!--begin::Image preview wrapper-->
{% if  data != null%}

{% if photo !=null %}
{% if photo.vars.name == 'logo' %}
    <div class="image-input-wrapper w-125px h-125px" style="background-image: url({{ asset('uploads/'~ data.logo.path ~'/'~ data.logo.alt   )}})"></div>
{% endif %}
{% if photo.vars.name == 'logoLogin' %}
    <div class="image-input-wrapper w-125px h-125px" style="background-image: url({{ asset('uploads/'~ data.logoLogin.path ~'/'~ data.logoLogin.alt   )}})"></div>
{% endif %}
{% if photo.vars.name == 'favicon' %}
    <div class="image-input-wrapper w-125px h-125px" style="background-image: url({{ asset('uploads/'~ data.favicon.path ~'/'~ data.favicon.alt   )}})"></div>
{% endif %}
{% if photo.vars.name == 'imageLogin' %}
    <div class="image-input-wrapper w-125px h-125px" style="background-image: url({{ asset('uploads/'~ data.imageLogin.path ~'/'~ data.imageLogin.alt   )}})"></div>
{% endif %}
{% endif %}
{# {% if photo !=null %}

<div class="image-input-wrapper w-125px h-125px" style="background-image: url({{ asset('uploads/'~ data.photo.path ~'/'~ data.photo.alt   )}})"></div>

{% endif %} #}


{% else %}
<div class="image-input-wrapper w-125px h-125px" style="background-image: url(/assets/media/avatars/300-1.jpg)"></div>
{% endif %}



<!--end::Image preview wrapper-->
<!--begin::Edit button-->
<label class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="change" data-bs-toggle="tooltip" data-bs-dismiss="click" title="Change avatar">
    <i class="bi bi-pencil-fill fs-7"></i>
    <!--begin::Inputs-->
  
{{ form_widget(photo,{attr:{'type':'file',"name":"avatar"}}) }}

    
    
   {#  <input type="file" name="avatar" accept=".png, .jpg, .jpeg" /> #}
    <input type="hidden" name="avatar_remove" />
<!--end::Inputs-->
</label>
<!--end::Edit button-->
<!--begin::Cancel button-->
<span class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="cancel" data-bs-toggle="tooltip" data-bs-dismiss="click" title="Cancel avatar">
    <i class="bi bi-x fs-2"></i>
</span>
<!--end::Cancel button-->
<!--begin::Remove button-->
<span class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="remove" data-bs-toggle="tooltip" data-bs-dismiss="click" title="Remove avatar">
    <i class="bi bi-x fs-2"></i>
</span>
<!--end::Remove button-->
</div>